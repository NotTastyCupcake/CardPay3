@model EmployeCreateViewModel
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" />
        <span asp-validation-for="FirstName"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" />
        <span asp-validation-for="LastName"></span>
    </div>
    <div class="form-group">
        <label asp-for="MiddleName"></label>
        <input asp-for="MiddleName" />
        <span asp-validation-for="MiddleName"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" />
        <span asp-validation-for="PhoneNumber"></span>
    </div>
    <div class="form-group">
        <label asp-for="JobPhoneNumber"></label>
        <input asp-for="JobPhoneNumber" />
        <span asp-validation-for="JobPhoneNumber"></span>
    </div>
    <div class="form-group">
        <label asp-for="Position"></label>
        <input asp-for="Position" />
        <span asp-validation-for="Position"></span>
    </div>
    <div class="form-group">
        <label asp-for="DepartmentNum"></label>
        <input asp-for="DepartmentNum" />
        <span asp-validation-for="DepartmentNum"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdGender"></label>
        <select asp-for="IdGender" asp-items="ViewBag.Genders"></select>
    </div>

    <label>Документ подтверждающий личность</label>
    <div class="form-group">
        <label asp-for="IdType"></label>
        <select asp-for="IdType" asp-items="ViewBag.DocumentTypes"></select>
    </div>
    <div class="form-group">
        <label asp-for="DataIssued"></label>
        <input asp-for="DataIssued" />
        <span asp-validation-for="DataIssued"></span>
    </div>
    <div class="form-group">
        <label asp-for="IssuedBy"></label>
        <input asp-for="IssuedBy" />
        <span asp-validation-for="IssuedBy"></span>
    </div>
    <div class="form-group">
        <label asp-for="SubdivisionCode"></label>
        <input asp-for="SubdivisionCode" />
        <span asp-validation-for="SubdivisionCode"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Добавить" class="btn btn-primary" />
        <a asp-action="Index">Назад к списку</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

